{
	"compilerOptions": {
		"declaration": true,
		"module": "CommonJS",
		"esModuleInterop": true,
		"target": "ES5",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "./dist",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"strict": true,
		"baseUrl": "./src",
		"rootDir": "./src",
		"paths": {}
	},
	"exclude": ["__tests__", "jest.config.ts", "dist", "**/*.spec.*"]
}
