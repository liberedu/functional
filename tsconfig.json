{
	"compilerOptions": {
		"module": "commonjs",
		"lib": ["es2017", "es7", "es6"],
		"target": "ES5",
		"moduleResolution": "node",
		"outDir": "./dist",
		"baseUrl": "./src",
		"rootDir": "./src",
		"paths": {},
		"declaration": true,
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"importHelpers": true,
		"removeComments": false,
		"noImplicitAny": false,
		"strictNullChecks": true,
		"skipLibCheck": true
	},
	"exclude": ["__tests__", "jest.config.ts", "dist", "**/*.spec.*"]
}
