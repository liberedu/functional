{
	"compilerOptions": {
		"declaration": true,
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "./dist",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"strict": true,
		"baseUrl": "./src",
		"rootDir": "./src",
		"paths": {}
	},
	"exclude": ["__tests__", "jest.config.ts"]
}
